    Text.Regex.Glob.String
    Text.Regex.Glob.Generic
    Text.Regex.Glob.Generic.RegexParser
    Text.Regex.XMLSchema.String
    Text.Regex.XMLSchema.Generic
    Text.Regex.XMLSchema.Generic.Matching
